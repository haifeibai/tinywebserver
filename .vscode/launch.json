{
    "version": "0.2",
    "configurations": [
        {
            "name": "DEBUG",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/server", // 可执行文件路径
            "args": [], // 可选：传递给程序的参数
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build", // 依赖的构建任务
            "miDebuggerPath": "/usr/bin/gdb" // gdb 可执行文件路径
        }
    ]
}